<div class="panel panel-blue effect1">
  <h1><span class="strong">作</span>品一覧</h1>
</div>
<% @products.each do |product| %>
<div class="col-sm-4 col-md-3">
  <a href="<%= to("/blog/entry/#{product.id}/")%>">
    <div class="thumbnail">
      <div class="thuimg"><img src="<%= to(product.thumbnail) %>" alt="thumbnail" /></div>
      <div class="caption">
        <h3><%= product.title %></h3>
      </div>
    </div>
  </a>
</div>
<% end %>
